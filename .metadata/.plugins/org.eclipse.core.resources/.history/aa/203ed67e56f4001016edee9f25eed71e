//			String email = jsonObject.getString("email");
//			String password = jsonObject.getString("password");
//			if (email.isEmpty()) {
//				response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
//				return;
//			}
//			if (!email.matches("^[a-z0-9]+@[a-z0-9]+\\.[a-z]{2,}$")) {
//				response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
//				return;
//			}
//			if (password.isEmpty()) {
//				response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
//				return;
//			}
//			if (password.length() < 8) {
//				response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
//				return;
//			}
//			boolean isValidUser = false;
//			Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/tradeShow", "root", "@Kr!$hn@1808");
//			PreparedStatement ps = con.prepareStatement("SELECT * FROM users WHERE email = ? AND password = ?");
//			ps.setString(1, email);
//			ps.setString(2, password);
//			ResultSet rs = ps.executeQuery();
//			if (rs.next()) {
//				isValidUser = true;
//			}
//			if (!isValidUser) {
//				response.setStatus(HttpServletResponse.SC_UNAUTHORIZED);
//				response.getWriter().write("Invalid data");
//				return;
//			}
//			response.setContentType("application/json");
//			response.setCharacterEncoding("UTF-8");
//			response.getWriter().write(response.toString());
//		} catch (SQLException e) {
//			// TODO Auto-generated catch block
//			e.printStackTrace();
//		}
		

        JSONObject responseObject = new JSONObject();

        StringBuilder sb = new StringBuilder();
        BufferedReader reader = request.getReader();
        String line;

        while ((line = reader.readLine()) != null) {
            sb.append(line);
        }

        try {
            JSONObject requestObject = new JSONObject(sb.toString());

            String email = requestObject.getString("email").toLowerCase();
            String password = requestObject.getString("password");

            // validations
            if (email.isEmpty()) {
                responseObject.put("StatusCode", 400);
                responseObject.put("message", "Email is required");
                response.getWriter().write(responseObject.toString());
                return;
            }

            if (!email.matches("^[a-z0-9]+@[a-z0-9]+\\.[a-z]{2,}$")) {
                responseObject.put("StatusCode", 400);
                responseObject.put("message", "Invalid email format");
                response.getWriter().write(responseObject.toString());
                return;
            }

            if (password.isEmpty()) {
                responseObject.put("StatusCode", 400);
                responseObject.put("message", "Password is required");
                response.getWriter().write(responseObject.toString());
                return;
            }

            if (password.length() < 8) {
                responseObject.put("StatusCode", 400);
                responseObject.put("message", "Password must be at least 8 characters");
                response.getWriter().write(responseObject.toString());
                return;
            }

            boolean isValidUser = false;

            try (Connection con = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/WordConnectDB",
                    "root",
                    "abcd");
                 PreparedStatement ps = con.prepareStatement(
                    "SELECT 1 FROM Users WHERE Email = ? AND Password = ?")) {

                ps.setString(1, email);
                ps.setString(2, password);

                try (ResultSet rs = ps.executeQuery()) {
                    isValidUser = rs.next();
                }
            }

            if (!isValidUser) {
                responseObject.put("StatusCode", 401);
                responseObject.put("message", "Invalid email or password");
                response.getWriter().write(responseObject.toString());
                return;
            }

            responseObject.put("StatusCode", 200);
            responseObject.put("message", "Login successful");
            response.getWriter().write(responseObject.toString());

        } catch (Exception e) {
            e.printStackTrace();
            responseObject.put("StatusCode", 500);
            responseObject.put("message", "Server error");
            response.getWriter().write(responseObject.toString());
        }
	}
}